// tsconfig.esm.json
{
    "compilerOptions": {
        "target": "es2021",
        "module": "NodeNext",
        "outDir": "./dist/esm",
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "strict": true,
    },
    "include": [
        "src/esm/**/*"
    ]
}